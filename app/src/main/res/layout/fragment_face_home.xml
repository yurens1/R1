<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FaceHome"
    android:background="#4B5BB1">

    <TextView
        android:id="@+id/loguin_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_loguin2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#11248C"
        android:gravity="center"
        android:padding="10dp"
        android:text="Iniciar sessÃ£o"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/text_loguin"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="180dp"
        android:hint="Email"
        android:padding="10dp" />
    <EditText
        android:id="@+id/text_loguin2"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_loguin"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:hint="Palavra-passe"
        android:padding="10dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:src="@drawable/facebook"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Registrar no facebook"
        android:textColor="@color/white"
        android:layout_below="@id/loguin_button"
        android:layout_marginTop="200dp"/>




</RelativeLayout>